    function addLike(postId) {
      const likesElem = document.getElementById(`like-count-${postId}`);
      const likeIconElem = document.getElementById(`like-icon-${postId}`);
      let currentLikes = parseInt(likesElem.innerHTML, 10) || 0;
      if (isLoggedIn) {
